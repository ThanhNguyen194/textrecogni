<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/symptom_choose"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:background="@color/background"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emptysymptom"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_empty"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/emptysymptom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emptysymptom"
                android:layout_centerHorizontal="true"
                android:text="Chụp ảnh để quét" />
        </RelativeLayout>

        <Button
            android:id="@+id/continuesymptomcheck"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/symptom_choose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorbutton"
            android:hint="Tiếp tục" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>